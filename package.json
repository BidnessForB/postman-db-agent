{
  "name": "postman-db-agent",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test": "jest test/simple.test.js test/database.test.js test/api.test.js",
    "test:unit": "jest test/database.test.js",
    "test:integration": "jest test/api.test.js",
    "test:performance": "jest test/performance",
    "test:watch": "jest --watch test/simple.test.js test/database.test.js test/api.test.js",
    "test:coverage": "jest --coverage test/simple.test.js test/database.test.js test/api.test.js",
    "test:all": "jest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "mysql2": "^3.15.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "dbAgent.js",
      "!node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
